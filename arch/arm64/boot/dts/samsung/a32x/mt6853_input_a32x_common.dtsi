/* TOUCH start */
/* touch gpio start */
&pio {
/*ilitek start */
	tsp_on_miso: tsp-on-miso {
		pins_cmd_dat{
			pinmux = <PINMUX_GPIO23__FUNC_SPI1_MI>;
			bias-disable;
		};
	};
	tsp_on_cs: tsp-on-cs {
		pins_cmd_dat{
			pinmux = <PINMUX_GPIO21__FUNC_SPI1_CSB>;
			bias-disable;
		};
	};
	tsp_on_mosi: tsp-on-mosi {
		pins_cmd_dat{
			pinmux = <PINMUX_GPIO22__FUNC_SPI1_MO>;
			bias-disable;
		};
	};
	tsp_on_clk: tsp-on-clk {
		pins_cmd_dat{
			pinmux = <PINMUX_GPIO20__FUNC_SPI1_CLK>;
			bias-disable;
		};
	};

	tsp_off_miso: tsp-off-miso {
		pins_cmd_dat{
			pinmux = <PINMUX_GPIO23__FUNC_GPIO23>;
			slew-rate = <0>;
			bias-pull-down;
			input-enable;
		};
	};
	tsp_off_cs: tsp-off-cs {
		pins_cmd_dat{
			pinmux = <PINMUX_GPIO21__FUNC_GPIO21>;
			slew-rate = <0>;
			bias-pull-down;
			input-enable;
		};
	};
	tsp_off_mosi: tsp-off-mosi {
		pins_cmd_dat{
			pinmux = <PINMUX_GPIO22__FUNC_GPIO22>;
			slew-rate = <0>;
			bias-pull-down;
			input-enable;
		};
	};
	tsp_off_clk: tsp-off-clk {
		pins_cmd_dat{
			pinmux = <PINMUX_GPIO20__FUNC_GPIO20>;
			slew-rate = <0>;
			bias-pull-down;
			input-enable;
		};
	};

	intr_on: intr-on {
               pins_cmd_dat {
                       pinmux = <PINMUX_GPIO14__FUNC_GPIO14>;
                       slew-rate = <0>;
                       bias-disable;
               };
	};

	intr_off: intr-off {
		pins_cmd_dat {
                       pinmux = <PINMUX_GPIO14__FUNC_GPIO14>;
                       slew-rate = <0>;
                       input-enable;
                       bias-pull-down;
               };
	};

	reset_on: reset-on {
		pins_cmd_dat {
			pinmux = <PINMUX_GPIO7__FUNC_GPIO7>;
			slew-rate = <0>;
			bias-disable;
			output-high;
		};
	};
	reset_off: reset-off {
		pins_cmd_dat {
			pinmux = <PINMUX_GPIO7__FUNC_GPIO7>;
			slew-rate = <0>;
			input-enable;
			bias-pull-down;
		};
	};
/*ilitek end */
};
/* touch gpio end */

&spi1 {
	status = "okay";
	#address-cells = <1>;
	#size-cells = <0>;
	num-cs = <2>;

	ilitek_ili9882x@0 {
		status = "okay";
		compatible = "iliteck,ili9882x-spi";
		reg = <0>;
		spi-max-frequency = <5000000>;
		pinctrl-names = "default","pins_on_state", "pins_off_state";
		pinctrl-0 = <&intr_on &reset_on &tsp_on_miso &tsp_on_cs &tsp_on_mosi &tsp_on_clk>;
		pinctrl-1 = <&intr_on &reset_on &tsp_on_miso &tsp_on_cs &tsp_on_mosi &tsp_on_clk>;
		pinctrl-2 = <&intr_off &reset_off &tsp_off_miso &tsp_off_cs &tsp_off_mosi &tsp_off_clk>;
		iliteck,irq-gpio = <&pio 14 0x2008>; /* IRQF_ONESHOT | IRQF_TRIGGER_LOW */
		iliteck,reset-gpio = <&pio 7 0x0>;
		/*iliteck,cs-gpio = <&pio 21 0>;*/
		/*iliteck,lcdid1-gpio = <&pio 170 0x0>;*/
		/*iliteck,lcdid2-gpio = <&pio 171 0x0>;*/
		/*iliteck,lcdid = <0>;*/
		iliteck,lcdtype = <0x7250>;
		iliteck,lcd_rst = "gpio_lcd_rst";
		iliteck,lcd_bl_en = "gpio_lcd_bl_en";
		iliteck,lcd_vddi = "vcamio";
		iliteck,irq-on-state = <0>;
		iliteck,spi-mode = <0>;
		iliteck,byte-delay-us = <0>;
		iliteck,block-delay-us = <0>;
		iliteck,ubl-max-freq = <5000000>;
		iliteck,ubl-byte-delay-us = <20>;
		iliteck,area-size = <48 81 30>;
		iliteck,enable_settings_aot;
		iliteck,enable_sysinput_enabled;
		iliteck,support_ear_detect_mode;
		iliteck,prox_lp_scan_enabled;
		iliteck,support_spay_gesture_mode;
		iliteck,fw_name = "tsp_ilitek/ili9881x_a32x.hex";
	};

	/* Novatek device tree node */
	novatek@1 {
		status = "okay";
		compatible = "novatek,NVT-ts-spi";
		reg = <1>; //Same as CS ID
		spi-max-frequency = <9600000>;
		novatek,reset-gpio = <&pio 7 0x00>;
		novatek,irq-gpio = <&pio 14 0x2002>;
		/*novatek,cs-gpio = <&pio 21 0>;*/
		pinctrl-names = "on_state", "off_state";
		pinctrl-0 = <&intr_on &reset_on &tsp_on_miso &tsp_on_cs &tsp_on_mosi &tsp_on_clk>;
		pinctrl-1 = <&intr_off &reset_off &tsp_off_miso &tsp_off_cs &tsp_off_mosi &tsp_off_clk>;
		novatek,resolution = <720 1600>;
		novatek,enable_settings_aot;
		novatek,support_ear_detect_mode;
		novatek,support_spay;
		novatek,prox_lp_scan_enabled;
		novatek,enable_sysinput_enabled;
		novatek,lcdtype = <0x0aa240>;
		novatek,fw_name = "tsp_novatek/nt36525_a32_csot.bin";
		novatek,fw_name_mp = "tsp_novatek/nt36525_a32_mp_csot.bin";
		novatek,regulator_lcd_vdd = "vcamio";
		novatek,regulator_lcd_reset = "gpio_lcd_rst";
		novatek,regulator_lcd_bl = "gpio_lcd_bl_en";

		/* 525 */
		//novatek,swrst-n8-addr = <0x01F01A>;

		/* 672A, 525B, 675, 526, 672C */
		novatek,swrst-n8-addr = <0x03F0FE>;
		novatek,spi-rd-fast-addr = <0x03F310>;

		/* MP */
		novatek,mp-support-dt;

		/* nt36525_a32_csot */
		novatek-mp-criteria-7219@0 {
			#address-cells = <1>;
			#size-cells = <0>;
			compatible = "novatek-mp-criteria-7219";

			/* sec cmd test config */
			open_test_spec = <(-511) 5120>;
			short_test_spec = <10000 14008>;
			diff_test_frame = <50>;
			fdm_x_num = <2>;
		};
		/* nt36525_a32_ltps */
		novatek-mp-criteria-7226@1 {
			#address-cells = <1>;
			#size-cells = <0>;
			compatible = "novatek-mp-criteria-7226";

			/* sec cmd test config */
			open_test_spec = <(-511) 5120>;
			short_test_spec = <10000 14008>;
			diff_test_frame = <50>;
			/* sec cmd fdm test config */
			fdm_x_num = <2>;
			fdm_diff_test_frame = <50>;
		};
		/* nt36525_a32_sharp */
		novatek-mp-criteria-721E@2 {
			#address-cells = <1>;
			#size-cells = <0>;
			compatible = "novatek-mp-criteria-721E";

			/* sec cmd test config */
			open_test_spec = <(-511) 5120>;
			short_test_spec = <10000 14008>;
			diff_test_frame = <50>;
			/* sec cmd fdm test config */
			fdm_x_num = <2>;
			fdm_diff_test_frame = <50>;
		};
	};
};
/* TOUCH end */
